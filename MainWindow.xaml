<Window x:Class="WetWorks_NetWorks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WetWorks_NetWorks"
        mc:Ignorable="d"
        Title="Wetwork IP" 
        Height="460" 
        Width="700"
        Background="#DDD" 
        ResizeMode="NoResize" 
        KeyDown="OnKeyDownInMainWindowHandler" 
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
    <!--Styles located in App.Xaml -->

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="12*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Grid.Column="0" 
               Grid.Row="2" 
               Grid.ColumnSpan="7" 
               HorizontalAlignment="Center" 
               Height="290"  
               VerticalAlignment="Top"  
               Source="/cthulhu_blur.png" 
               Width="294" 
               Margin="0,0,0,0" 
               Grid.RowSpan="2"
               />

        <Border Width="700"
                Grid.Row="0"
                Grid.ColumnSpan="7" 
                Background="#FFF4F4F4"/>

        <Button x:Name="logoBtn"
                Grid.Row="0"
                Grid.Column="0"
                BorderThickness="0" 
                Click="LogoBtn_Click"
                Style="{StaticResource LogoButtonTheme}"
                >
            <Button.Background>
                <ImageBrush ImageSource="/Wetwork Icon.png" Stretch="Uniform" AlignmentX="Left" AlignmentY="Top"   />
            </Button.Background>
        </Button>

        <StackPanel Grid.Row="0"
                    Grid.Column="7" 
                    Orientation="Vertical">
            <Label Content="WETWORK IP"
               Grid.Row="0"
               Grid.Column="7"
               FontSize="14"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"/>

            <Label Content=" MARK II"
               Grid.Row="0"
               Grid.Column="7"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"/>

            <Label x:Name="assemblyLbl"
               Grid.Row="0"
               Grid.Column="7"
               FontSize="8"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"/>

        </StackPanel>

        <Label  Grid.Row="0"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Content="SELECT AN INTERFACE"
                FontSize="20"
                Foreground="Black"/>

        <Border Width="700"                      
                Grid.Row="1"
                Grid.Column="0"
                Grid.RowSpan="2"
                Grid.ColumnSpan="7"
                Background="{StaticResource BackgroundColor}">

        </Border>

        <StackPanel Name="Interface_StackPanel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    Orientation="Horizontal">


            <RadioButton 
                    x:Name="ethernetBtn"
                    Width="345"
                    BorderBrush="Azure"
                    BorderThickness="0,0,0,1"
                    FontSize="18"
                    Foreground="White"
                    FontWeight="Bold"
                    Content="ETHERNET"
                    Tag="{StaticResource EthernetIcon}"
                    Style="{StaticResource ImageTextRadioButtonStyle}" 
                    Click="EthernetBtn_Click">

            </RadioButton>

            <RadioButton 
                    x:Name="wifiBtn"

                    BorderBrush="Azure"
                    BorderThickness="0,0,0,1"
                    FontSize="18"
                    Foreground="White"
                    FontWeight="Bold"
                    Content="WIFI"
                    Tag="{StaticResource WifiIcon}"
                    Style="{StaticResource ImageTextRadioButtonStyle}" 
                    Click="WifiBtn_Click" >

            </RadioButton>



        </StackPanel>

        <StackPanel Name="Center_StackPanel"
                    Grid.Row="2"
                    Grid.ColumnSpan="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="center"
                    VerticalAlignment="Center">

            <Grid Width="700">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Name="Scheme_StackPanel"
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="300"   
                            Height="253">


                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="39" />
                            <RowDefinition Height="43"/>
                            <RowDefinition Height="43"/>
                            <RowDefinition Height="43"/>
                            <RowDefinition Height="43"/>
                            <RowDefinition Height="43"/>
                        </Grid.RowDefinitions>
                        <Border Grid.RowSpan="6"
                                BorderBrush="#FF7E7E7E"
                                BorderThickness="1,1,1,2"
                                CornerRadius="0"/>

                        <Label  Grid.Row="0"
                                Margin="0"
                                Content="SELECT AN IP SCHEME"
                                FontWeight="Bold"
                                FontSize="16"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="#FFD6D5D5"
                                BorderBrush="#FF6C6B6B"
                                BorderThickness="1"
                                Width="300"
                                Height="39" />

                        <RadioButton    Grid.Row="1"
                                        Content="DHCP" 
                                        x:Name="choice1Btn"
                                        Width="300"    
                                        BorderThickness="0,1,0,1"
                                        Style="{StaticResource SchemeButtonTheme}" 
                                        BorderBrush="Black" 
                                        Click="choiceBtn_Click"/>

                        <Rectangle  x:Name="choice1AccentBtn"
                                    Grid.Row="1"
                                    Width="10"
                                    Height="43"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource AccentRectangleTheme}"
                                    Visibility="Hidden"/>


                        <RadioButton    Grid.Row="2"
                                        Content="10.10.1.253 / 16" 
                                        x:Name="choice2Btn"
                                        Width="300"    
                                        Style="{StaticResource SchemeButtonTheme}" 
                                        Click="choiceBtn_Click" 
                                        BorderThickness="0,0,0,1" 
                                        BorderBrush="Black"/>

                        <Rectangle  x:Name="choice2AccentBtn"
                                    Grid.Row="2"
                                    Width="10"
                                    Height="43"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource AccentRectangleTheme}"
                                    Visibility="Hidden"/>

                        <RadioButton    Grid.Row="3"
                                        Content="192.168.1.253 / 24" 
                                        x:Name="choice3Btn"
                                        Width="300"     
                                        Style="{StaticResource SchemeButtonTheme}" 
                                        Click="choiceBtn_Click"/>

                        <Rectangle  x:Name="choice3AccentBtn"
                                    Grid.Row="3"
                                    Width="10"
                                    Height="43"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource AccentRectangleTheme}"
                                    Visibility="Hidden"/>

                        <RadioButton    Grid.Row="4"
                                        Content="169.254.1.253 / 16" 
                                        x:Name="choice4Btn"
                                        Width="300"     
                                        Style="{StaticResource SchemeButtonTheme}" 
                                        Click="choiceBtn_Click"/>

                        <Rectangle  x:Name="choice4AccentBtn"
                                    Grid.Row="4"
                                    Width="10"
                                    Height="43"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource AccentRectangleTheme}" 
                                    Visibility="Hidden"/>

                        <RadioButton    Grid.Row="5"
                                        Content="" 
                                        x:Name="choice5Btn"
                                        Width="300"     
                                        Style="{StaticResource SchemeButtonTheme}" 
                                        Click="choiceBtn_Click"/>

                        <Rectangle  x:Name="choice5AccentBtn"
                                    Grid.Row="5"
                                    Width="10"
                                    Height="43"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource AccentRectangleTheme}"
                                    Visibility="Hidden"/>

                        <TextBox x:Name="userEntryTxt"
                                 Grid.Row="5"
                                 Height="30"
                                 Margin="25,0,55,0"
                                 Style="{StaticResource ModernTextBox}"
                                 GotFocus="userEntry_GotFocus" 
                                 KeyDown="OnKeyDownInUserEntryBoxHandler" 
                                 TextChanged="OnUserEntryTextChanged"
                                  />
                        <Button x:Name="userEntryApplyBtn"
                                Grid.Row="5" 
                                Width="50" 
                                Margin="5"
                                Background="#FFD6D5D5"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Right"
                                Style="{StaticResource RoundedButton}"
                                Content="Apply"
                                Click="userEntryApplyBtn_Click" UseLayoutRounding="True" />



                    </Grid>


                </StackPanel>

                <StackPanel Name="Settings_StackPanel"
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.RowSpan="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="300"
                            Height="253">


                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38"/>
                            <RowDefinition Height="43"/>
                            <RowDefinition Height="43"/>
                            <RowDefinition Height="43"/>
                            <RowDefinition Height="43"/>
                            <RowDefinition Height="43"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.RowSpan="6"
                                BorderBrush="#FF7E7E7E"
                                BorderThickness="1,1,1,1"
                                CornerRadius="0"/> 

                        <Label  Grid.Row="0"
                                Margin="0"
                                Content="CURRENT SETTINGS"
                                FontWeight="Bold"
                                FontSize="16"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="#FFD6D5D5"
                                BorderBrush="#FF6C6B6B"
                                BorderThickness="1"
                                Width="300"
                                />

                        <Rectangle Grid.Row="1"
                                   Fill="#00FFFFFF" 
                                   Stroke="#FF7E7E7E"/>

                        <Label Grid.Row="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="[HOSTNAME]"
                               Foreground="#FF020E25"
                               Margin="6,0,0,0"
                               Padding="0,0,0,1"
                               FontSize="12"
                               />

                        <Label x:Name="hostnameTxt"
                               Grid.Row="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Content="TSIL-JEFFPRIDE"
                               Foreground="{StaticResource CurrentSettingsTextColor}"
                               FontFamily="Trebuchet MS"
                               FontSize="15"
                               Margin="20,12,0,0"
                               />


                        <Rectangle Grid.Row="2"
                                   Fill="#10FFFFFF" 
                                   Stroke="#FF7E7E7E"/>

                        <Label Grid.Row="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="[DOMAIN]"
                               Foreground="#FF020E25"
                               Margin="6,0,0,0"
                               Padding="0,0,0,1"
                               FontSize="12"
                               
                               />

                        <Label x:Name="domainTxt"
                               Grid.Row="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Content="tsi-inc.local"
                               Foreground="{StaticResource CurrentSettingsTextColor}"
                               FontFamily="Trebuchet MS"
                               FontSize="15"
                               Margin="20,12,0,0"
                               />


                        <Rectangle Grid.Row="3"
                                   Fill="#00FFFFFF" 
                                   Stroke="#FF7E7E7E"/>

                        <Label Grid.Row="3"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="[ADAPTER]"
                               Foreground="#FF020E25"
                               Margin="6,0,0,0"
                               Padding="0,0,0,1"
                               FontSize="12"
                               />

                        <Label x:Name="adapterTxt"
                               Grid.Row="3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Content="ETHERNET"
                               Foreground="{StaticResource CurrentSettingsTextColor}"
                               FontFamily="Trebuchet MS"
                               FontSize="15"
                               Margin="20,12,0,0"
                               />


                        <Rectangle Grid.Row="4"
                                   Fill="#10FFFFFF" 
                                   Stroke="#FF7E7E7E"/>

                        <Label Grid.Row="4"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="[IP ADDRESS]"
                               Foreground="#FF020E25"
                               Margin="6,0,0,0"
                               Padding="0,0,0,1"
                               FontSize="12"
                               
                               />

                        <Label x:Name="ipaTxt"
                               Grid.Row="4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Content="192.168.86.52 / 16"
                               Foreground="{StaticResource CurrentSettingsTextColor}"
                               FontFamily="Trebuchet MS"
                               FontSize="15"
                               Margin="20,12,0,0"
                               />

                        <Rectangle Grid.Row="5"
                                   Fill="#00FFFFFF" 
                                   Stroke="#FF7E7E7E"/>

                        <Label Grid.Row="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="[SPEED]"
                               Foreground="#FF020E25"
                               Margin="6,0,0,0"
                               Padding="0,0,0,1"
                               FontSize="12" 
                               />

                        <Label x:Name="speedTxt"
                               Grid.Row="5"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Content="600 Mbps"
                               Foreground="{StaticResource CurrentSettingsTextColor}"
                               FontFamily="Trebuchet MS"
                               FontSize="15"
                               Margin="20,12,0,0"
                               />
                    </Grid>

                </StackPanel>
            </Grid>


        </StackPanel>

        <StackPanel Name="Status_StackPanel"
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="7"
                    Orientation="Horizontal"
                    Background="#444655">

            <Label x:Name="statusLbl"
                   HorizontalAlignment="Left"
                   Margin="5,0,0,0"
                   Content="STATUS"
                   FontSize="16"
                   Foreground="GhostWhite"/>

            <Label x:Name="statusTxt"
                   HorizontalAlignment="Center"
                   Foreground="GhostWhite"
                   FontSize="13"
                   Margin="10,0,0,0"
                   FontStyle="Italic"
                   Content="This is a long sentence to test this label" />

        </StackPanel>

    </Grid>
</Window>
